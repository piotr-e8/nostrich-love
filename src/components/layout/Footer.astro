---
import SocialShare from '../ui/SocialShare.astro';
import { siteConfig } from '../../config/site';
import { LogoText } from '../ui/LogoText';

const footerLinks = {
  learn: [
    { label: 'Getting Started', href: '/guides' },
    { label: 'Interactive Tools', href: '/tools' },
    { label: 'Glossary', href: '/glossary' },
    { label: 'FAQ', href: '/guides/faq' },
  ],
  resources: [
    { label: 'Nostr Resources', href: '/resources' },
    { label: 'Client Simulators', href: '/simulators' },
    { label: 'Relay Playground', href: '/tools#relay-playground' },
    { label: 'Key Generator', href: '/tools#key-generator' },
  ],
  community: [
    { label: 'Nostr Protocol', href: 'https://nostr.com', external: true },
    { label: 'GitHub', href: siteConfig.social.github, external: true },
    { label: 'NIPs', href: 'https://github.com/nostr-protocol/nips', external: true },
  ],
  about: [
    { label: 'About Us', href: '/about' },
    { label: 'Settings', href: '/settings' },
    { label: 'Privacy Policy', href: '/privacy' },
    { label: 'humans.txt', href: '/humans.txt' },
  ],
};

const communityLinks = [
  { label: 'Artists', href: '/nostr-for-artists' },
  { label: 'Musicians', href: '/nostr-for-musicians' },
  { label: 'Photographers', href: '/nostr-for-photographers' },
  { label: 'Parents', href: '/nostr-for-parents' },
  { label: 'Foodies', href: '/nostr-for-foodies' },
  { label: 'Book Lovers', href: '/nostr-for-books' },
];

const toolLinks = [
  { label: 'Client Simulators', href: '/simulators' },
  { label: 'Relay Playground', href: '/tools#relay-playground' },
  { label: 'Key Generator', href: '/tools#key-generator' },
  { label: 'Follow Pack Finder', href: '/follow-pack' },
];

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50 transition-colors duration-200" role="contentinfo">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-8">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-2 mb-4" aria-label="Nostrich.love - Home">
          <div class="w-10 h-10 flex-shrink-0">
            <img class="scale-[1.5]" src="/logo.png" width={40} height={40} alt="" />
          </div>
          <LogoText client:load size="sm" />
        </a>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
          A beginner-friendly guide to the Nostr protocol. Learn, explore, and join the decentralized social revolution.
        </p>
        <p class="text-xs text-gray-500 mb-6">
          Keys generated in your browser. Nothing is stored on our servers.
        </p>
        
        <!-- Social Share -->
        <div class="mb-4">
          <SocialShare />
        </div>
      </div>

      <!-- Learn -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Learn</h3>
        <ul class="space-y-2" role="list">
          {footerLinks.learn.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Communities - TEMPORARILY HIDDEN
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Communities</h3>
        <ul class="space-y-2" role="list">
          {communityLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      -->

      <!-- Tools -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Tools</h3>
        <ul class="space-y-2" role="list">
          {toolLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Community & About -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Community</h3>
        <ul class="space-y-2 mb-6" role="list">
          {footerLinks.community.map((link) => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors inline-flex items-center gap-1"
                aria-label={`${link.label} (opens in new tab)`}
              >
                {link.label}
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </li>
          ))}
        </ul>

        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">About</h3>
        <ul class="space-y-2" role="list">
          {footerLinks.about.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-gray-500">
        Â© {currentYear} {siteConfig.name}. Open source and community-driven.
      </p>
      <div class="flex items-center gap-4">
          <a 
          href="https://github.com/piotr-e8/nostrich-love"
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 transition-colors"
          aria-label="GitHub (opens in new tab)"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>

      </div>
    </div>
  </div>
</footer>
