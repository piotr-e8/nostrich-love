---
import "../styles/globals.css";
import SEO from "../components/SEO.astro";
import { siteConfig } from "../config/site";
import type { SEOProps } from "../config/seo-types";
import { StreakBannerWrapper } from "../components/gamification/StreakBannerWrapper";

interface Props extends SEOProps {}

const props = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    
    <!-- SEO Component -->
    <SEO {...props} />
    
    <!-- Critical CSS to prevent FOUC -->
    <style is:inline>
      /* Prevent FOUC for dark mode */
      html.dark { background-color: #0F0A1A; }
      html.dark body { background-color: #0F0A1A; color: #ffffff; }
      
      /* Critical font display */
      @font-face {
        font-family: 'Inter';
        font-display: swap;
      }
      
      /* Skip to content link */
      .skip-to-content {
        position: absolute;
        top: -100%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        padding: 0.75rem 1.5rem;
        background: #8B5CF6;
        color: white;
        font-weight: 600;
        border-radius: 0 0 0.5rem 0.5rem;
        text-decoration: none;
        transition: top 0.2s;
      }
      
      .skip-to-content:focus {
        top: 0;
      }
      
      /* Focus indicators */
      *:focus-visible {
        outline: 2px solid #8B5CF6;
        outline-offset: 2px;
      }
      
      button:focus-visible,
      a:focus-visible {
        outline: 2px solid #8B5CF6;
        outline-offset: 2px;
        border-radius: 0.375rem;
      }
      
      /* Theme System - Friendly to Cyberpunk Gradual Transition */
      :root {
        /* Friendly Theme (Default for beginners) */
        --theme-bg-primary: #FFFDF8;
        --theme-bg-secondary: #FFFBF5;
        --theme-text-primary: #1F2937;
        --theme-text-secondary: #4B5563;
        --theme-accent-primary: #9B7BFF;
        --theme-accent-secondary: #FFD700;
        --theme-border: #E5E7EB;
        --theme-card-bg: #FFFFFF;
        --theme-hero-gradient: linear-gradient(135deg, #F3F0FF 0%, #FFF7EB 50%, #FFFDF8 100%);
      }
      
      /* Theme: Friendly (beginner mode) */
      [data-theme="friendly"] {
        --theme-bg-primary: #FFFDF8;
        --theme-bg-secondary: #FFFBF5;
        --theme-text-primary: #1F2937;
        --theme-text-secondary: #4B5563;
        --theme-accent-primary: #9B7BFF;
        --theme-accent-secondary: #FFD700;
        --theme-border: #E5E7EB;
        --theme-card-bg: #FFFFFF;
        --theme-hero-gradient: linear-gradient(135deg, #F3F0FF 0%, #FFF7EB 50%, #FFFDF8 100%);
      }
      
      /* Theme: Cyberpunk (advanced mode) */
      [data-theme="cyberpunk"] {
        --theme-bg-primary: #0F0A1A;
        --theme-bg-secondary: #1A1025;
        --theme-text-primary: #FFFFFF;
        --theme-text-secondary: #A1A1AA;
        --theme-accent-primary: #8B5CF6;
        --theme-accent-secondary: #6366F1;
        --theme-border: #374151;
        --theme-card-bg: #1F1F2E;
        --theme-hero-gradient: linear-gradient(135deg, #0F0A1A 0%, #1A1025 50%, #2D1B4E 100%);
      }
      
      /* Apply theme variables */
      .theme-bg-primary { background-color: var(--theme-bg-primary); }
      .theme-bg-secondary { background-color: var(--theme-bg-secondary); }
      .theme-text-primary { color: var(--theme-text-primary); }
      .theme-text-secondary { color: var(--theme-text-secondary); }
      .theme-accent-primary { color: var(--theme-accent-primary); }
      .theme-accent-secondary { color: var(--theme-accent-secondary); }
      .theme-border { border-color: var(--theme-border); }
      .theme-card-bg { background-color: var(--theme-card-bg); }
      .theme-hero-gradient { background: var(--theme-hero-gradient); }
    </style>
    
    <!-- Dark mode initialization - prevents FOUC -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'system';
        if (theme === 'dark' || (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    
    <!-- Fonts with display=swap for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Cloudflare Web Analytics (Privacy-friendly, no cookies, GDPR compliant) -->
    {siteConfig.analytics.enabled && siteConfig.analytics.cloudflareToken !== 'YOUR_CLOUDFLARE_TOKEN' && (
      <script defer src={`https://static.cloudflareinsights.com/beacon.min.js`} data-cf-beacon={`{"token": "${siteConfig.analytics.cloudflareToken}"}`}></script>
    )}
    
    <!-- Plausible Analytics Alternative (commented out - uncomment to use) -->
    <!-- <script defer data-domain="nostrich.love" src="https://plausible.io/js/script.js"></script> -->
  </head>
  
  <body class="min-h-screen bg-background-light dark:bg-background-dark text-gray-900 dark:text-white transition-colors duration-200">
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="skip-to-content">
      Skip to content
    </a>
    
    <!-- Streak Banner - Shows when user has an active streak -->
    <StreakBannerWrapper client:only="react" />
    
    <slot />
    
    <!-- Gamification Scripts -->
    <script is:inline>
      // Initialize gamification state from localStorage
      (function() {
        try {
          const STORAGE_KEY = 'nostrich-gamification-v1';
          const stored = localStorage.getItem(STORAGE_KEY);
          
          // Default state structure
          const defaultState = {
            badges: {},
            progress: {
              completedGuides: [],
              streakDays: 0,
              lastActive: null,
              activePath: 'beginner',
              pathProgress: {}
            },
            stats: {
              keysGenerated: false,
              firstPostMade: false,
              firstZapReceived: false,
              accountsFollowed: 0,
              keysBackedUp: false,
              relaysConnected: 0
            },
            version: 1
          };
          
          // Badge definitions that must exist
          const badgeIds = ['key-master', 'first-post', 'zap-receiver', 'community-builder', 
                           'knowledge-seeker', 'nostr-graduate', 'security-conscious', 'relay-explorer'];
          
          let data;
          
          if (!stored) {
            // No data exists - create default
            data = defaultState;
            // Initialize all badges as not earned
            badgeIds.forEach(id => {
              data.badges[id] = { earned: false, earnedAt: 0 };
            });
          } else {
            // Data exists - parse and validate
            data = JSON.parse(stored);
            
            // Ensure all required fields exist (migration)
            if (!data.progress) data.progress = defaultState.progress;
            if (!data.stats) data.stats = defaultState.stats;
            if (!data.badges) data.badges = {};
            
            // Ensure new progress fields exist
            if (!data.progress.completedGuides) data.progress.completedGuides = [];
            if (!data.progress.streakDays) data.progress.streakDays = 0;
            if (!data.progress.activePath) data.progress.activePath = 'beginner';
            if (!data.progress.pathProgress) data.progress.pathProgress = {};
            
            // Ensure all badges exist
            badgeIds.forEach(id => {
              if (!data.badges[id]) {
                data.badges[id] = { earned: false, earnedAt: 0 };
              }
            });
          }
          
          // Save the validated/updated data
          localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
          console.log('[Layout] Gamification data initialized/validated');
          
        } catch (e) {
          console.error('[Layout] Error initializing gamification:', e);
        }
      })();
    </script>
  </body>
</html>
