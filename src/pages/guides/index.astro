<script>
  // Progress tracking integration
  const STORAGE_KEY = 'nostrich-progress-v1';
  const PRIVACY_SETTINGS_KEY = 'nostrich-privacy-settings';

  // Get privacy settings
  function getPrivacySettings() {
    const defaultSettings = {
      trackingEnabled: true,
      showProgressIndicators: true,
    };
    try {
      const stored = localStorage.getItem(PRIVACY_SETTINGS_KEY);
      if (stored) {
        return { ...defaultSettings, ...JSON.parse(stored) };
      }
    } catch (e) {
      console.error('Error reading privacy settings:', e);
    }
    return defaultSettings;
  }

  // Get progress data
  function getProgressData() {
    try {
      const stored = localStorage.getItem(STORAGE_KEY);
      if (stored) {
        const parsed = JSON.parse(stored);
        return parsed.guides || {};
      }
    } catch (e) {
      console.error('Error reading progress data:', e);
    }
    return {};
  }

  // Update progress indicators
  function updateProgressIndicators() {
    const settings = getPrivacySettings();
    const guides = getProgressData();
    const indicators = document.querySelectorAll('.progress-indicator');

    indicators.forEach((indicator) => {
      const guideId = indicator.getAttribute('data-guide-id');
      const dot = indicator.querySelector('div');

      if (!settings.trackingEnabled || !settings.showProgressIndicators) {
        // Hide all dots if tracking disabled
        dot.classList.add('opacity-0');
        indicator.removeAttribute('title');
        return;
      }

      const progress = guides[guideId];
      const status = progress?.status || 'not-started';

      // Remove all status classes first
      dot.classList.remove('bg-green-500', 'bg-blue-400', 'bg-gray-300', 'dark:bg-gray-600', 'opacity-0');

      switch (status) {
        case 'completed':
          dot.classList.add('bg-green-500');
          indicator.setAttribute('title', 'Completed');
          break;
        case 'engaged':
        case 'viewed':
          dot.classList.add('bg-blue-400');
          indicator.setAttribute('title', 'In progress');
          break;
        default:
          // Not started - hide the dot
          dot.classList.add('bg-gray-300', 'dark:bg-gray-600', 'opacity-0');
          indicator.removeAttribute('title');
          return;
      }
    });
  }

  // Initialize progress indicators
  if (typeof window !== 'undefined') {
    updateProgressIndicators();
    
    // Listen for storage changes (in case user updates progress in another tab)
    window.addEventListener('storage', (e) => {
      if (e.key === STORAGE_KEY || e.key === PRIVACY_SETTINGS_KEY) {
        updateProgressIndicators();
      }
    });
  }

  // Simple search functionality
  const searchInput = document.getElementById('guide-search');
  const guideCards = document.querySelectorAll('[data-guide-id]');
  
  searchInput?.addEventListener('input', (e) => {
    const query = (e.target).value.toLowerCase();
    
    guideCards.forEach((card) => {
      const title = card.getAttribute('data-title') || '';
      const description = card.getAttribute('data-description') || '';
      const shouldShow = title.includes(query) || description.includes(query);
      
      card.style.display = shouldShow ? 'block' : 'none';
    });
    
    // Hide empty sections
    document.querySelectorAll('.guide-section').forEach((section) => {
      const visibleCards = section.querySelectorAll('[data-guide-id]:not([style*="none"])');
      section.style.display = visibleCards.length > 0 ? 'block' : 'none';
    });
  });
</script>
