---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import { GamificationExplainerWrapper } from '../../components/gamification/GamificationExplainerWrapper';
import { ContinueReadingCard } from '../../components/navigation/ContinueReadingCard';
import { GuidesContainer } from '../../components/guides/GuidesContainer';
import { SKILL_LEVELS, type SkillLevel } from '../../data/learning-paths';

// Guide metadata mapping
const guideMetadata: Record<string, {
  title: string;
  description: string;
  estimatedTime: string;
  difficulty: SkillLevel;
  tags: string[];
}> = {
  'what-is-nostr': {
    title: 'What is Nostr?',
    description: 'Understanding the basics of the decentralized social protocol and how it differs from traditional social media.',
    estimatedTime: '5 min',
    difficulty: 'beginner',
    tags: ['basics', 'overview'],
  },
  'keys-and-security': {
    title: 'Keys & Security',
    description: 'Learn how to generate, save, and protect your Nostr keys. The complete security guide for beginners.',
    estimatedTime: '8 min',
    difficulty: 'beginner',
    tags: ['security', 'keys'],
  },
  'quickstart': {
    title: 'Quickstart',
    description: 'Get up and running with Nostr in minutes with this hands-on quickstart guide.',
    estimatedTime: '10 min',
    difficulty: 'beginner',
    tags: ['getting-started'],
  },
  'finding-community': {
    title: 'Finding Community',
    description: 'Discover how to find and join communities on Nostr.',
    estimatedTime: '10 min',
    difficulty: 'beginner',
    tags: ['community', 'social'],
  },
  'faq': {
    title: 'FAQ',
    description: 'Frequently asked questions about Nostr, answered in plain English.',
    estimatedTime: '10 min',
    difficulty: 'beginner',
    tags: ['faq', 'help'],
  },
  'relays-demystified': {
    title: 'Relays Demystified',
    description: 'Deep dive into how relays work with simple analogies and interactive tools.',
    estimatedTime: '10 min',
    difficulty: 'beginner',
    tags: ['relays', 'technical'],
  },
  'nip05-identity': {
    title: 'NIP-05 Identity',
    description: 'Set up your NIP-05 identifier and get a human-readable name like you@domain.com.',
    estimatedTime: '12 min',
    difficulty: 'intermediate',
    tags: ['identity', 'nip-05'],
  },
  'zaps-and-lightning': {
    title: 'Zaps & Lightning Network',
    description: 'Master the art of sending and receiving Bitcoin payments (zaps) over the Lightning Network.',
    estimatedTime: '20 min',
    difficulty: 'intermediate',
    tags: ['bitcoin', 'lightning', 'zaps'],
  },
  'nostr-tools': {
    title: 'Essential Nostr Tools',
    description: 'A curated directory of the most useful Nostr tools and services for key management, media hosting, analytics, and more.',
    estimatedTime: '10 min',
    difficulty: 'intermediate',
    tags: ['tools', 'resources'],
  },
  'troubleshooting': {
    title: 'Troubleshooting',
    description: 'Common issues and how to fix them. From empty feeds to relay problems.',
    estimatedTime: '15 min',
    difficulty: 'intermediate',
    tags: ['help', 'support'],
  },
  'multi-client': {
    title: 'Using Multiple Clients',
    description: 'How to use multiple clients simultaneously and keep your data in sync.',
    estimatedTime: '10 min',
    difficulty: 'intermediate',
    tags: ['clients', 'sync'],
  },
  'relay-guide': {
    title: 'Relay Guide',
    description: 'Everything you need to know about choosing, connecting to, and managing relays.',
    estimatedTime: '15 min',
    difficulty: 'intermediate',
    tags: ['relays', 'technical'],
  },
  'privacy-security': {
    title: 'Privacy & Security',
    description: 'Advanced privacy and security practices for power users.',
    estimatedTime: '20 min',
    difficulty: 'advanced',
    tags: ['privacy', 'security'],
  },
  'nip17-private-messages': {
    title: 'NIP-17: Private Direct Messages',
    description: 'Learn about NIP-17, the secure replacement for NIP-04, and how to migrate your private messaging in Nostr',
    estimatedTime: '12 min',
    difficulty: 'advanced',
    tags: ['privacy', 'nip-17', 'messaging'],
  },
  'protocol-comparison': {
    title: 'Complete Protocol Comparison',
    description: 'A comprehensive technical comparison of the three major decentralized social protocols. Learn the architecture, trade-offs, and which protocol fits your needs.',
    estimatedTime: '15 min',
    difficulty: 'advanced',
    tags: ['technical', 'comparison'],
  },
};

// Build skill levels data with guides
type GuideWithHref = {
  id: string;
  title: string;
  description: string;
  estimatedTime: string;
  difficulty: SkillLevel;
  href: string;
  tags: string[];
};

type SkillLevelData = {
  id: SkillLevel;
  label: string;
  icon: string;
  description: string;
  unlockThreshold: number;
  guides: GuideWithHref[];
};

const skillLevels: SkillLevelData[] = (['beginner', 'intermediate', 'advanced'] as SkillLevel[]).map(levelId => {
  const level = SKILL_LEVELS[levelId];
  const guides = level.sequence.map(slug => {
    const meta = guideMetadata[slug] || {
      title: slug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()),
      description: 'Guide description coming soon.',
      estimatedTime: '10 min',
      difficulty: levelId,
      tags: [],
    };
    
    return {
      id: slug,
      ...meta,
      href: `/guides/${slug}`,
    };
  });
  
  return {
    id: levelId,
    label: level.label,
    icon: level.icon,
    description: level.description,
    unlockThreshold: level.unlockThreshold,
    guides,
  };
});

// Calculate totals
const totalGuides = skillLevels.reduce((acc, level) => acc + level.guides.length, 0);
---

<Layout
  title="Learning Guides - Nostr Beginner Guide"
  description="Step-by-step guides to learn Nostr from beginner to advanced. Track your progress and master the decentralized social protocol."
>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-friendly-purple-100/50 via-transparent to-friendly-gold-100/30 dark:from-friendly-purple-900/30 dark:to-friendly-gold-900/20" />
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16 relative">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
            <span class="bg-gradient-to-r from-friendly-purple-600 to-friendly-purple-400 bg-clip-text text-transparent">
              Learn Nostr Step by Step
            </span>
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
            Progressive skill levels from beginner to advanced. Unlock new levels as you complete guides and master the protocol.
          </p>
          
          <!-- Progress Overview -->
          <div id="progress-overview" class="bg-white dark:bg-gray-800 rounded-2xl border-2 border-friendly-purple-200 dark:border-friendly-purple-700 p-6 shadow-sm max-w-md mx-auto mb-8 hidden">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Your Progress</span>
              <span id="progress-percentage" class="text-2xl font-bold text-friendly-purple-600 dark:text-friendly-purple-400">0%</span>
            </div>
            <div class="h-3 w-full bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
              <div 
                id="progress-bar"
                class="h-full bg-gradient-to-r from-friendly-purple-500 to-friendly-purple-300 rounded-full transition-all duration-500"
                style="width: 0%"
              />
            </div>
            <p id="progress-text" class="text-sm text-gray-500 dark:text-gray-400 mt-2">
              Start your first guide to see progress
            </p>
          </div>

        </div>
      </div>
    </section>

    <!-- Search & Filter -->
    <section class="py-8 bg-gray-50 dark:bg-gray-900/30 border-b border-gray-200 dark:border-gray-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl mx-auto">
          <div class="relative mb-4">
            <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input
              type="text"
              id="guide-search"
              placeholder="Search guides..."
              class="w-full pl-12 pr-4 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-900 dark:text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-friendly-purple-400 focus:border-transparent"
            />
          </div>
          <!-- Progress Legend -->
          <div class="flex items-center justify-center gap-6 text-sm text-gray-500 dark:text-gray-400">
            <div class="flex items-center gap-2">
              <div class="w-2.5 h-2.5 rounded-full bg-green-500"></div>
              <span>Completed</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2.5 h-2.5 rounded-full bg-blue-400"></div>
              <span>In progress</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Interest Filter & Guide Sections - Full Width -->
    <section class="py-12">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <GuidesContainer 
          client:only="react"
          skillLevels={skillLevels.map(level => ({
            id: level.id,
            guides: level.guides,
            unlockThreshold: level.unlockThreshold
          }))}
        />
      </div>
    </section>



    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-friendly-purple-600 to-friendly-purple-400">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Not sure where to start?
        </h2>
        <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
          Take our quick assessment to find the perfect starting point for your Nostr journey.
        </p>
        <a
          href="/tools"
          class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-friendly-purple-600 bg-white rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
        >
          Explore Tools
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </section>
  </main>

  <Footer />
  
  <!-- Gamification Explainer Modal -->
  <GamificationExplainerWrapper client:load buttonId="how-does-this-work-btn" totalGuides={totalGuides} />
</Layout>
