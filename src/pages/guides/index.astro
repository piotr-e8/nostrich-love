---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';

interface Guide {
  id: string;
  title: string;
  description: string;
  estimatedTime: string;
  difficulty: 'beginner' | 'intermediate' | 'advanced';
  completed: boolean;
  prerequisites?: string[];
  href: string;
}

interface GuideSection {
  title: string;
  level: 'beginner' | 'intermediate' | 'advanced';
  guides: Guide[];
}

const guideSections: GuideSection[] = [
  {
    title: 'Getting Started',
    level: 'beginner',
    guides: [
      {
        id: 'protocol-comparison',
        title: 'Complete Protocol Comparison',
        description: 'A comprehensive technical comparison of the three major decentralized social protocols. Learn the architecture, trade-offs, and which protocol fits your needs.',
        estimatedTime: '15 min',
        difficulty: 'beginner',
        completed: false,
        href: '/guides/protocol-comparison',
      },
      {
        id: 'what-is-nostr',
        title: 'What is Nostr?',
        description: 'Understanding the basics of the decentralized social protocol and how it differs from traditional social media.',
        estimatedTime: '5 min',
        difficulty: 'beginner',
        completed: false,
        href: '/guides/what-is-nostr',
      },
      {
        id: 'keys-and-security',
        title: 'Keys & Security',
        description: 'Learn how to generate, save, and protect your Nostr keys. The complete security guide for beginners.',
        estimatedTime: '8 min',
        difficulty: 'beginner',
        completed: false,
        href: '/guides/keys-and-security',
      },
      {
        id: 'quickstart',
        title: 'Quickstart',
        description: 'Get up and running with Nostr in minutes with this hands-on quickstart guide.',
        estimatedTime: '10 min',
        difficulty: 'beginner',
        completed: false,
        href: '/guides/quickstart',
      },
    ],
  },
  {
    title: 'Intermediate',
    level: 'intermediate',
    guides: [
      {
        id: 'relays-demystified',
        title: 'Relays Demystified',
        description: 'Deep dive into how relays work with simple analogies and interactive tools.',
        estimatedTime: '10 min',
        difficulty: 'intermediate',
        completed: false,
        prerequisites: ['keys-and-security', 'quickstart'],
        href: '/guides/relays-demystified',
      },
      {
        id: 'nip05-identity',
        title: 'NIP-05 Identity',
        description: 'Set up your NIP-05 identifier and get a human-readable name like you@domain.com.',
        estimatedTime: '12 min',
        difficulty: 'intermediate',
        completed: false,
        prerequisites: ['keys-and-security'],
        href: '/guides/nip05-identity',
      },
      {
        id: 'zaps-and-lightning',
        title: 'Zaps & Lightning Network',
        description: 'Master the art of sending and receiving Bitcoin payments (zaps) over the Lightning Network.',
        estimatedTime: '20 min',
        difficulty: 'intermediate',
        completed: false,
        prerequisites: ['nip05-identity'],
        href: '/guides/zaps-and-lightning',
      },
      {
        id: 'finding-community',
        title: 'Finding Community',
        description: 'Discover how to find and join communities on Nostr.',
        estimatedTime: '10 min',
