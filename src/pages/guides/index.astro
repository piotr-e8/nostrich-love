      </div>
    </section>

    <!-- Guides Grid -->
    <section class="py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-16">
          {guideSections.map((section, sectionIndex) => (
            <div class="guide-section" data-level={section.level}>
