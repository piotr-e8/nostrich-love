---
/**
 * Simulators Index Page
 * Landing page for all Nostr client simulators
 */

import Layout from '../../layouts/Layout.astro';
import { 
  allSimulatorConfigs,
  getConfigsByPlatform,
  type SimulatorConfig 
} from '../../simulators/shared/configs';

const title = 'Nostr Client Simulators';
const description = 'Try out 7 different Nostr clients in your browser. No installation required.';

const mobileClients = getConfigsByPlatform('ios').concat(getConfigsByPlatform('android'));
const webClients = getConfigsByPlatform('web');
const desktopClients = getConfigsByPlatform('desktop');

function getPlatformIcon(platform: SimulatorConfig['platform']) {
  switch (platform) {
    case 'ios':
      return '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/></svg>';
    case 'android':
      return '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M6 18c0 .55.45 1 1 1h1v3.5c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5V19h2v3.5c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5V19h1c.55 0 1-.45 1-1V8H6v10zM3.5 8C2.67 8 2 8.67 2 9.5v7c0 .83.67 1.5 1.5 1.5S5 17.33 5 16.5v-7C5 8.67 4.33 8 3.5 8zm17 0c-.83 0-1.5.67-1.5 1.5v7c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5v-7c0-.83-.67-1.5-1.5-1.5zm-4.97-5.84l1.3-1.3c.2-.2.2-.51 0-.71-.2-.2-.51-.2-.71 0l-1.48 1.48C13.85 1.23 12.95 1 12 1c-.96 0-1.86.23-2.66.63L7.85.15c-.2-.2-.51-.2-.71 0-.2.2-.2.51 0 .71l1.31 1.31C6.97 3.26 6 5.01 6 7h12c0-1.99-.97-3.75-2.47-4.84zM10 5H9V4h1v1zm5 0h-1V4h1v1z"/></svg>';
    case 'web':
      return '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg>';
    case 'desktop':
      return '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20 18c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2H0v2h24v-2h-4zM4 6h16v10H4V6z"/></svg>';
    default:
      return '';
  }
}

function getPlatformLabel(platform: SimulatorConfig['platform']) {
  switch (platform) {
    case 'ios': return 'iOS';
    case 'android': return 'Android';
    case 'web': return 'Web';
    case 'desktop': return 'Desktop';
    default: return platform;
  }
}
---

<Layout title={title} description={description}>
  <div class="simulators-index min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 dark:from-gray-950 dark:to-gray-900 py-12">
    <div class="max-w-6xl mx-auto px-4">
      {/* Hero */}
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Try Nostr Clients
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
            Without Installing
          </span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-8">
          Experience 7 different Nostr clients directly in your browser. 
          Perfect for beginners to explore before choosing their favorite.
        </p>
        <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-500">
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
            No signup required
          </span>
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
            Realistic interface
          </span>
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
            No private data collected
          </span>
        </div>
      </div>

      {/* Client Grid */}
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {Object.values(allSimulatorConfigs).map((client) => (
          <a 
            href={`/simulators/${client.id}`}
            class="group relative bg-white dark:bg-gray-900 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-200 dark:border-gray-800"
          >
            {/* Platform Badge */}
            <div class="absolute top-4 right-4 flex items-center gap-1.5 text-xs font-medium text-gray-500 bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded-full">
              <Fragment set:html={getPlatformIcon(client.platform)} />
              {getPlatformLabel(client.platform)}
            </div>

            {/* Client Logo */}
            <div class="w-16 h-16 rounded-2xl mb-4 overflow-hidden">
              <img 
                src={client.icon} 
                alt={`${client.name} logo`}
                class="w-full h-full object-cover rounded-2xl"
              />
            </div>

            {/* Content */}
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
              {client.name}
            </h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
              {client.description}
            </p>

            {/* Features preview */}
            <div class="flex flex-wrap gap-2">
              {client.supportedFeatures.slice(0, 4).map((feature) => (
                <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded">
                  {feature.replace('_', ' ')}
                </span>
              ))}
              {client.supportedFeatures.length > 4 && (
                <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-500 rounded">
                  +{client.supportedFeatures.length - 4} more
                </span>
              )}
            </div>

            {/* Arrow */}
            <div class="absolute bottom-6 right-6 opacity-0 group-hover:opacity-100 transition-opacity">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      {/* Info Section */}
      <div class="mt-16 grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Safe & Secure</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            These are visual simulations only. No real keys are generated and no data leaves your browser.
          </p>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Learn by Doing</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Get comfortable with Nostr concepts like keys, relays, and zaps before using real clients.
          </p>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Fast & Responsive</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Each simulator is optimized for its platform - try them on different devices!
          </p>
        </div>
      </div>

      {/* CTA */}
      <div class="mt-16 text-center">
        <a 
          href="/guides" 
          class="inline-flex items-center gap-2 px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-xl transition-colors"
        >
          Ready to use real Nostr?
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</Layout>
