---
/**
 * Gossip Simulator Page
 * Desktop Nostr client simulation - Sidebar Navigation Layout
 */

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import { gossipConfig } from '../../simulators/shared/configs';
import { GossipSimulator } from '../../simulators/gossip';
import { SimulatorClient } from '../../simulators/shared/types';
import SimulatorSidebar from '../../components/navigation/SimulatorSidebar';

const title = `Try ${gossipConfig.name} - Nostr Client Simulator`;
const description = gossipConfig.description;
---

<Layout title={title} description={description}>
  <Header />
  
  <div class="simulator-page min-h-screen bg-gray-100 dark:bg-gray-950">
    <div class="flex h-[calc(100vh-4rem)]">
      {/* Sidebar Navigation */}
      <SimulatorSidebar 
        client:load 
        currentClient={SimulatorClient.GOSSIP}
        className="h-full"
      />
      
      {/* Main Content Area - Fixed positioning so simulator stays in place */}
      <div class="flex-1 relative h-full">
        {/* Simulator Container - Fixed position, takes full height */}
        <div class="simulator-container absolute inset-0 bg-white dark:bg-gray-900 rounded-none shadow-none overflow-hidden flex items-center justify-center">
          <div class="h-full max-h-[80vh] w-full overflow-hidden">
            <GossipSimulator client:load />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<!-- Tour button functionality handled by SimulatorSidebar React component -->
