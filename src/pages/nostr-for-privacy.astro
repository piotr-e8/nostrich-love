---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { FeaturedCreatorsFromPack } from '../components/community/FeaturedCreatorsFromPack';

const title = 'Nostr for Privacy Advocates';
const description = 'Social media without surveillance. No phone numbers, no email, no identity tracking. Just pure privacy-preserving communication.';

const valueProps = [
  { 
    icon: 'üö´', 
    title: 'No Personal Information Required', 
    description: 'Create an account without providing any personal details. No name, no email, no phone number, no ID verification required. Ever.' 
  },
  { 
    icon: 'üé≠', 
    title: 'Pseudonymous by Design', 
    description: 'Your identity is your cryptographic key pair. Use any name you want. Be whoever you want to be. Your real identity stays private.' 
  },
  { 
    icon: 'üè¢', 
    title: 'No Corporate Tracking', 
    description: 'No algorithms analyzing your behavior. No ads following you around. No data sold to third parties. Your attention is yours alone.' 
  },
  { 
    icon: 'üîê', 
    title: 'End-to-End Encryption (NIP-17)', 
    description: 'Private messages with modern encryption. NIP-17 provides secure, authenticated encryption for your sensitive communications.' 
  }
];

const relevantGuides = [
  { slug: 'what-is-nostr', title: 'What is Nostr?', description: 'Understand the protocol built for privacy', time: '5 min', level: 'beginner' },
  { slug: 'keys-and-security', title: 'Keys & Security', description: 'Master cryptographic key management', time: '8 min', level: 'beginner' },
  { slug: 'nip17-private-messages', title: 'NIP-17 Private Messages', description: 'Secure messaging with modern encryption', time: '12 min', level: 'advanced' },
  { slug: 'privacy-security', title: 'Privacy & Security', description: 'Advanced practices for privacy-conscious users', time: '20 min', level: 'advanced' },
  { slug: 'finding-community', title: 'Finding Community', description: 'Connect with privacy advocates on Nostr', time: '10 min', level: 'beginner' }
];

const hashtags = ['#privacy', '#security', '#encryption', '#decentralized', '#censorshipresistant'];
const recommendedClients = ['Damus', 'Amethyst', 'Coracle', 'Snort'];

const categoryId = 'privacy';
const followPackUrl = '/follow-pack?category=privacy';
---

<Layout title={title} description={description}>
  <Header />
  
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-purple-50 via-white to-indigo-50 dark:from-gray-900 dark:via-gray-900 dark:to-gray-800">
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-1/2 -right-1/2 w-full h-full bg-gradient-to-br from-purple-200/30 to-transparent rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute -bottom-1/2 -left-1/2 w-full h-full bg-gradient-to-tr from-indigo-200/20 to-transparent rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 relative">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Privacy Icon -->
          <div class="inline-flex items-center justify-center w-24 h-24 mb-6 rounded-3xl bg-white dark:bg-gray-800 shadow-xl border-2 border-purple-200 dark:border-purple-700">
            <span class="text-6xl">üîí</span>
          </div>
          
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 text-sm font-medium mb-6">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Privacy First
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6 text-gray-900 dark:text-white">
            {title}
          </h1>
          
          <p class="text-xl sm:text-2xl text-gray-600 dark:text-gray-400 mb-8 max-w-3xl mx-auto leading-relaxed">
            {description}
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/guides"
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-purple-600 hover:bg-purple-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
              Start Learning
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a
              href={followPackUrl}
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-purple-700 dark:text-purple-400 bg-white dark:bg-gray-800 border-2 border-purple-200 dark:border-purple-700 hover:border-purple-400 dark:hover:border-purple-500 rounded-xl transition-all duration-200"
            >
              <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              Join Privacy Advocates
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Nostr Section -->
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              Why Privacy Advocates Choose Nostr
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
              Social media that respects your privacy by design
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {valueProps.map((prop) => (
              <div class="p-8 rounded-2xl bg-gradient-to-br from-purple-50 to-white dark:bg-gray-800 dark:bg-none border border-purple-100 dark:border-gray-700 hover:border-purple-300 dark:hover:border-purple-600 transition-all duration-300 group">
                <div class="text-5xl mb-4 group-hover:scale-110 transition-transform duration-300">
                  {prop.icon}
                </div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
                  {prop.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                  {prop.description}
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Relevant Guides Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900/50 border-y border-purple-100 dark:border-gray-700">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Relevant Guides
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
              Start with these guides tailored for privacy advocates
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {relevantGuides.map((guide) => (
              <a 
                href={`/guides/${guide.slug}`}
                class="p-6 rounded-2xl bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-purple-300 dark:hover:border-purple-600 hover:shadow-lg transition-all duration-300 group"
              >
                <div class="flex items-center justify-between mb-4">
                  <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                    guide.level === 'beginner' 
                      ? 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300' 
                      : guide.level === 'intermediate'
                      ? 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300'
                      : 'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300'
                  }`}>
                    {guide.level}
                  </span>
                  <span class="text-sm text-gray-500 dark:text-gray-400">{guide.time}</span>
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                  {guide.title}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {guide.description}
                </p>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Community Links Section -->
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Community Links
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
              Connect with the privacy community on Nostr
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Hashtags -->
            <div class="p-6 rounded-2xl bg-gradient-to-br from-purple-50 to-white dark:bg-gray-800 dark:bg-none border border-purple-100 dark:border-gray-700">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center text-xl">
                  #
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">Hashtags to Follow</h3>
              </div>
              <div class="flex flex-wrap gap-2">
                {hashtags.map((tag) => (
                  <span class="px-3 py-1 rounded-full bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 text-sm font-medium">
                    {tag}
                  </span>
                ))}
              </div>
            </div>

            <!-- Recommended Clients -->
            <div class="p-6 rounded-2xl bg-gradient-to-br from-purple-50 to-white dark:bg-gray-800 dark:bg-none border border-purple-100 dark:border-gray-700">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center text-xl">
                  üì±
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">Recommended Clients</h3>
              </div>
              <ul class="space-y-2">
                {recommendedClients.map((client) => (
                  <li class="flex items-center gap-2 text-gray-600 dark:text-gray-400">
                    <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {client}
                  </li>
                ))}
              </ul>
            </div>

            <!-- Follow Pack -->
            <div class="p-6 rounded-2xl bg-gradient-to-br from-purple-50 to-white dark:bg-gray-800 dark:bg-none border border-purple-100 dark:border-gray-700">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center text-xl">
                  üë•
                </div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">Key Accounts</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                Follow privacy advocates, security researchers, and freedom technologists on Nostr
              </p>
              <a 
                href={followPackUrl}
                class="inline-flex items-center text-purple-600 dark:text-purple-400 font-medium hover:underline"
              >
                View Follow Pack
                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Privacy Advocates Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900/50 border-y border-purple-100 dark:border-gray-700">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Featured Privacy Advocates
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
              Discover privacy and security experts already on Nostr
            </p>
          </div>

          <FeaturedCreatorsFromPack 
            client:load 
            categoryId={categoryId} 
            maxDisplay={6}
            followPackUrl={followPackUrl}
          />
        </div>
      </div>
    </section>

    <!-- CTA Footer Section -->
    <section class="py-20 bg-gradient-to-br from-purple-100 via-white to-indigo-50 dark:from-purple-900/30 dark:via-gray-900 dark:to-indigo-900/20">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-6">
            Ready to join?
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
            Take back control of your social media. No surveillance. No tracking. Just privacy.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a
              href="/guides"
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-purple-600 hover:bg-purple-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
              Start Learning
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a
              href={followPackUrl}
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-purple-700 dark:text-purple-400 bg-white dark:bg-gray-800 border-2 border-purple-200 dark:border-purple-700 hover:border-purple-400 dark:hover:border-purple-500 rounded-xl transition-all duration-200"
            >
              <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              Import Follow Pack
            </a>
          </div>

          <!-- How to Join Steps -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-3xl mx-auto">
            <div class="text-center">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-purple-100 dark:bg-purple-900/50 flex items-center justify-center text-xl font-bold text-purple-600">
                1
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Choose a Client</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">Download a Nostr app for your device</p>
            </div>
            <div class="text-center">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-purple-100 dark:bg-purple-900/50 flex items-center justify-center text-xl font-bold text-purple-600">
                2
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Create Keys</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">Generate your pseudonymous identity</p>
            </div>
            <div class="text-center">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-purple-100 dark:bg-purple-900/50 flex items-center justify-center text-xl font-bold text-purple-600">
                3
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Connect Securely</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">Join the privacy community</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
