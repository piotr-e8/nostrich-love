---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { CyberpunkHeroAnimation } from '../components/CyberpunkAnimation';

const title = 'Nostrich.love - Your Gateway to Decentralized Social Media';
const description = 'The safest way to start with Nostr. Master decentralized social media with structured guides, interactive tools, and hands-on practice.';

const valueProps = [
  { 
    icon: 'üéÆ', 
    title: 'Gamified Learning', 
    description: 'Track your progress with visual indicators as you advance from beginner to expert' 
  },
  { 
    icon: 'üìà', 
    title: 'Linear Path', 
    description: 'Follow a structured curriculum - no guesswork on what to learn next' 
  },
  { 
    icon: 'üõ†Ô∏è', 
    title: 'Hands-On Practice', 
    description: 'Interactive tools and simulators to practice before going live' 
  },
];

---

<Layout title={title} description={description}>
  <Header />
  
  <main id="main-content">
    <!-- Hero Section with Nostrich Animation -->
    <section class="relative min-h-[600px] flex items-center">
      <CyberpunkHeroAnimation client:load className="absolute inset-0" />
      
      <div class="relative z-10 w-full">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto text-center">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-6">
              <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
              <span class="text-sm text-gray-300">Open Source ‚Ä¢ Community Driven ‚Ä¢ Privacy First</span>
            </div>
            
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
              <span class="bg-gradient-to-r from-purple-300 via-white to-cyan-300 bg-clip-text text-transparent drop-shadow-[0_2px_10px_rgba(168,85,247,0.5)]">
                Learn Nostr the Smart Way
              </span>
            </h1>
            
            <p class="text-xl text-gray-300 mb-4 max-w-2xl mx-auto">
              Master decentralized social media with structured guides, hands-on tools, and clear explanations. From your first steps to advanced privacy practices.
            </p>
            
            <p class="text-lg text-gray-400 mb-8">
              No accounts. No passwords. No central authority. Just you and your keys.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/guides"
                class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-gradient-to-r from-purple-600 to-cyan-600 hover:from-purple-700 hover:to-cyan-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-purple-500/25 hover:-translate-y-0.5"
              >
                Start Learning
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
              <a
                href="/tools"
                class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-gray-200 bg-white/10 hover:bg-white/20 border border-white/20 hover:border-white/40 rounded-xl transition-all duration-200 backdrop-blur-sm"
              >
                Explore Tools
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Value Proposition Section -->
    <section class="py-16 border-y border-gray-800 bg-gray-950/50">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {valueProps.map((prop) => (
            <div class="text-center p-6">
              <div class="text-4xl mb-4">{prop.icon}</div>
              <h3 class="text-lg font-semibold text-white mb-2">{prop.title}</h3>
              <p class="text-sm text-gray-400">{prop.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Guides Overview Section -->
    <section class="py-20 bg-gradient-to-b from-gray-950 to-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-white mb-4">
              15 Guides, Zero Overwhelm
            </h2>
            <p class="text-lg text-gray-400 max-w-2xl mx-auto">
              Start with the basics and progress at your own pace. Each guide builds on the previous one, with clear prerequisites so you always know what's next.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
            <div class="p-6 rounded-2xl bg-gray-800/50 border border-gray-700">
              <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
                <span class="text-2xl">üöÄ</span> Getting Started
              </h3>
              <ul class="space-y-2 text-gray-400 text-sm">
                <li>‚Ä¢ What is Nostr? (5 min read)</li>
                <li>‚Ä¢ Quickstart Guide</li>
                <li>‚Ä¢ Keys & Security Fundamentals</li>
              </ul>
            </div>
            <div class="p-6 rounded-2xl bg-gray-800/50 border border-gray-700">
              <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
                <span class="text-2xl">‚öôÔ∏è</span> Core Concepts
              </h3>
              <ul class="space-y-2 text-gray-400 text-sm">
                <li>‚Ä¢ Understanding Relays</li>
                <li>‚Ä¢ NIP-05 Identity Verification</li>
                <li>‚Ä¢ Privacy & Security Best Practices</li>
              </ul>
            </div>
            <div class="p-6 rounded-2xl bg-gray-800/50 border border-gray-700">
              <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
                <span class="text-2xl">üí°</span> Practical Skills
              </h3>
              <ul class="space-y-2 text-gray-400 text-sm">
                <li>‚Ä¢ Zaps & Lightning Payments</li>
                <li>‚Ä¢ Private Messages (NIP-17)</li>
                <li>‚Ä¢ Finding Your Community</li>
              </ul>
            </div>
            <div class="p-6 rounded-2xl bg-gray-800/50 border border-gray-700">
              <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
                <span class="text-2xl">üîß</span> Tools & Reference
              </h3>
              <ul class="space-y-2 text-gray-400 text-sm">
                <li>‚Ä¢ Essential Nostr Tools</li>
                <li>‚Ä¢ Troubleshooting Common Issues</li>
                <li>‚Ä¢ <a href="/glossary" class="text-cyan-400 hover:underline">Glossary</a> & <a href="/guides/faq" class="text-cyan-400 hover:underline">FAQ</a></li>
              </ul>
            </div>
          </div>

          <div class="text-center">
            <a
              href="/guides"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-semibold text-white bg-gradient-to-r from-purple-600 to-cyan-600 hover:from-purple-700 hover:to-cyan-700 rounded-xl transition-all duration-200"
            >
              Browse All Guides
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Nostrich.love Section -->
    <section class="py-20 bg-gradient-to-b from-black to-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-white mb-4">
              Why Start Here?
            </h2>
            <p class="text-lg text-gray-400">
              Understanding Nostr isn't optional‚Äîit's essential for anyone who values freedom online.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="p-6 rounded-2xl bg-gradient-to-br from-purple-500/10 to-transparent border border-purple-500/20">
              <h3 class="text-lg font-semibold text-white mb-2">üåê The Future is Decentralized</h3>
              <p class="text-gray-400">Centralized platforms control what you see, who you can reach, and whether you exist online. Learning decentralized social media means understanding how to communicate without permission.</p>
            </div>
            <div class="p-6 rounded-2xl bg-gradient-to-br from-cyan-500/10 to-transparent border border-cyan-500/20">
              <h3 class="text-lg font-semibold text-white mb-2">üîë Own Your Digital Identity</h3>
              <p class="text-gray-400">Your online presence shouldn't be rented from corporations. Self-custody of your identity means no one can delete you, shadowban you, or sell your data without consent.</p>
            </div>
            <div class="p-6 rounded-2xl bg-gradient-to-br from-green-500/10 to-transparent border border-green-500/20">
              <h3 class="text-lg font-semibold text-white mb-2">‚ö° Early Adopters Shape the Future</h3>
              <p class="text-gray-400">Those who learn Nostr now will define the standards, build the tools, and lead communities as this technology matures. The learning curve is steeper now‚Äîbut so is the opportunity.</p>
            </div>
            <div class="p-6 rounded-2xl bg-gradient-to-br from-orange-500/10 to-transparent border border-orange-500/20">
              <h3 class="text-lg font-semibold text-white mb-2">‚ö†Ô∏è The Cost of Ignorance</h3>
              <p class="text-gray-400">Every day you rely on corporate platforms, your data is harvested, your speech is monitored, and your reach is throttled. Not learning alternatives means accepting a future with less freedom.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-900 via-gray-900 to-cyan-900"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-500/20 via-transparent to-transparent"></div>
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          Ready to Own Your Social Media?
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Join thousands of people who are taking control of their online identity. No corporations, no algorithms, no surveillance.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/guides"
            class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-purple-900 bg-white rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
          >
            Start Learning
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href="/tools"
            class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white border-2 border-white/30 hover:border-white rounded-xl transition-all duration-200"
          >
            Try the Tools
          </a>
        </div>
        <p class="mt-6 text-sm text-gray-400">
          Open source on <a href="https://github.com/aljazceru/awesome-nostr" target="_blank" rel="noopener noreferrer" class="text-cyan-400 hover:underline">GitHub</a> ‚Ä¢ Built by the Nostr community
        </p>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
