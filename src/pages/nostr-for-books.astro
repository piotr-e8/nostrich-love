---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { FeaturedCreatorsFromPack } from '../components/community/FeaturedCreatorsFromPack';

const title = 'Nostr for Book Lovers';
const description = 'Discuss literature, share reviews, and discover your next read with a community of book enthusiasts.';

const valueProps = [
  { 
    icon: 'üìö', 
    title: 'Book Reviews', 
    description: 'Share thoughtful reviews without worrying about algorithmic suppression. Your literary opinions deserve to be read.' 
  },
  { 
    icon: 'üìñ', 
    title: 'Reading Lists', 
    description: 'Curate and share reading lists with the community. Discover hidden gems that algorithms would never show you.' 
  },
  { 
    icon: '‚úçÔ∏è', 
    title: 'Author Discussions', 
    description: 'Engage in deep conversations about your favorite authors and their works. Connect with readers who share your passion.' 
  },
  { 
    icon: 'üîç', 
    title: 'Recommendations', 
    description: 'Get personalized book recommendations from real readers. No affiliate links‚Äîjust genuine suggestions from fellow book lovers.' 
  },
];

// Note: The 'books' category doesn't exist in follow-pack yet
// For now, we'll show a message inviting users to help populate it
// When ready, change categoryId to 'books' and update followPackUrl
const categoryId = 'books';
const followPackUrl = '/follow-pack?category=books';
const categoryExists = true;
---

<Layout title={title} description={description}>
  <Header />
  
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-indigo-50 dark:from-gray-900 dark:via-gray-900 dark:to-gray-800">
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-1/2 -right-1/2 w-full h-full bg-gradient-to-br from-blue-200/30 to-transparent rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute -bottom-1/2 -left-1/2 w-full h-full bg-gradient-to-tr from-indigo-200/20 to-transparent rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 relative">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-sm font-medium mb-6">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Nostr Community
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6 text-gray-900 dark:text-white">
            {title}
          </h1>
          
          <p class="text-xl sm:text-2xl text-gray-600 dark:text-gray-400 mb-8 max-w-3xl mx-auto leading-relaxed">
            {description}
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/follow-pack"
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-blue-600 hover:bg-blue-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
              Find Book Lovers
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a
              href="/guides"
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 hover:border-gray-400 dark:hover:border-gray-500 rounded-xl transition-all duration-200"
            >
              View All Guides
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Value Propositions -->
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              Why Book Lovers Choose Nostr
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
              A community for literary discussions
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {valueProps.map((prop) => (
              <div class="p-8 rounded-2xl bg-gradient-to-br from-blue-50 to-white dark:bg-gray-800 dark:bg-none border border-blue-100 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 transition-all duration-300 group">
                <div class="text-5xl mb-4 group-hover:scale-110 transition-transform duration-300">
                  {prop.icon}
                </div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
                  {prop.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                  {prop.description}
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Creators Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900/50 border-y border-blue-100 dark:border-gray-700">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Featured Book Lovers
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
              Connect with readers on Nostr
            </p>
          </div>

          {categoryExists ? (
            <FeaturedCreatorsFromPack 
              client:load 
              categoryId={categoryId} 
              maxDisplay={6}
              followPackUrl={followPackUrl}
            />
          ) : (
            <div class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl border-2 border-dashed border-blue-200 dark:border-blue-800">
              <div class="text-6xl mb-6">üìö</div>
              <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">
                Building the Books Community
              </h3>
              <p class="text-lg text-gray-600 dark:text-gray-400 mb-6 max-w-2xl mx-auto px-4">
                We're curating accounts for book lovers! Help us build this community by adding your favorite book reviewers, authors, and literary enthusiasts.
              </p>
              <a
                href="/follow-pack"
                class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-blue-600 hover:bg-blue-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl"
              >
                Explore All Categories
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
              <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">
                Want to add book accounts? Run: "Add accounts to category books"
              </p>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Join CTA Section -->
    <section class="py-20 bg-gradient-to-br from-blue-100 via-white to-indigo-50 dark:from-blue-900/30 dark:via-gray-900 dark:to-indigo-900/20">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-6">
            Join Book Lovers on Nostr
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
            Start discussing literature in minutes. No phone number. No ID verification. Your reading journey is yours to share.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a
              href="/guides"
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-blue-600 hover:bg-blue-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
              Get Started
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a
              href="/follow-pack"
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-blue-700 dark:text-blue-400 bg-white dark:bg-gray-800 border-2 border-blue-200 dark:border-blue-700 hover:border-blue-400 dark:hover:border-blue-500 rounded-xl transition-all duration-200"
            >
              <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              Find People to Follow
            </a>
          </div>

          <!-- How to Join Steps -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-3xl mx-auto">
            <div class="text-center">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center text-xl font-bold text-blue-600">
                1
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Choose a Client</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">Download a Nostr app for your device</p>
            </div>
            <div class="text-center">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center text-xl font-bold text-blue-600">
                2
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Create Keys</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">Get your unique identity in 30 seconds</p>
            </div>
            <div class="text-center">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center text-xl font-bold text-blue-600">
                3
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Discuss</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">Share your favorite books</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
