---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

const title = 'Nostr Resources';
const description = 'Curated collection of the best Nostr resources: clients, relays, documentation, communities, and tools. Everything you need to dive deeper into the Nostr ecosystem.';

const resourceCategories = [
  {
    title: 'Official Documentation',
    description: 'Core protocol documentation and specifications',
    resources: [
      {
        title: 'Nostr Protocol',
        description: 'The official Nostr protocol website with protocol basics',
        url: 'https://nostr.com',
        type: 'website',
      },
      {
        title: 'NIPs Repository',
        description: 'Nostr Implementation Possibilities - the full protocol specification',
        url: 'https://github.com/nostr-protocol/nips',
        type: 'github',
      },
      {
        title: 'Nostr GitHub',
        description: 'Official protocol repository and resources',
        url: 'https://github.com/nostr-protocol/nostr',
        type: 'github',
      },
    ],
  },
  {
    title: 'Client Apps',
    description: 'Popular Nostr clients for different platforms',
    resources: [
      {
        title: 'Damus',
        description: 'iOS client - one of the most popular mobile apps',
        url: 'https://damus.io',
        type: 'app',
      },
      {
        title: 'Iris',
        description: 'Web and mobile client with a clean interface',
        url: 'https://iris.to',
        type: 'app',
      },
      {
        title: 'Amethyst',
        description: 'Android client with excellent features',
        url: 'https://github.com/vitorpamplona/amethyst',
        type: 'app',
      },
      {
        title: 'Coracle',
        description: 'Advanced web client with relay management',
        url: 'https://coracle.social',
        type: 'app',
      },
    ],
  },
  {
    title: 'Developer Resources',
    description: 'Tools and libraries for building on Nostr',
    resources: [
      {
        title: 'nostr-tools',
        description: 'Essential JavaScript/TypeScript library for Nostr development',
        url: 'https://github.com/nbd-wtf/nostr-tools',
        type: 'github',
      },
      {
        title: 'Awesome Nostr',
        description: 'Comprehensive curated list of Nostr projects and resources',
        url: 'https://github.com/aljazceru/awesome-nostr',
        type: 'github',
      },
      {
        title: 'Nostr Dev Kit',
        description: 'Tools and documentation for Nostr developers',
        url: 'https://ndk.fyi',
        type: 'website',
      },
    ],
  },
  {
    title: 'Communities',
    description: 'Places to connect with other Nostr users',
    resources: [
      {
        title: 'Stacker News',
        description: 'Bitcoin-focused community that supports Nostr login',
        url: 'https://stacker.news',
        type: 'community',
      },
      {
        title: 'Nostr Reddit',
        description: 'Reddit community for Nostr discussions',
        url: 'https://reddit.com/r/nostr',
        type: 'community',
      },
    ],
  },
];
---

<Layout title={title} description={description}>
  <Header />
  
  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10 dark:from-primary/5 dark:to-secondary/5" />
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 relative">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
            <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
              Nostr Resources
            </span>
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
            A curated collection of the best resources for learning about and using Nostr. 
            From official documentation to community tools.
          </p>
        </div>
      </div>
    </section>

    <!-- Resources Grid -->
    <section class="py-16 bg-gray-50 dark:bg-gray-900/30">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {resourceCategories.map((category) => (
            <div class="p-6 bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{category.title}</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-6">{category.description}</p>
              
              <div class="space-y-4">
                {category.resources.map((resource) => (
                  <a
                    href={resource.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group block p-4 bg-gray-50 dark:bg-gray-900/50 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                  >
                    <div class="flex items-start justify-between">
                      <div>
                        <h3 class="font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors">
                          {resource.title}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                          {resource.description}
                        </p>
                      </div>
                      <svg class="w-5 h-5 text-gray-400 group-hover:text-primary transition-colors flex-shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-primary to-secondary">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Want to contribute?
        </h2>
        <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
          This guide is open source. If you know of a great Nostr resource that should be listed here, let us know!
        </p>
        <a
          href="https://github.com/nostr-protocol/nostr"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-primary bg-white rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
        >
          Contribute on GitHub
          <svg class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
